<%= form_for(current_user.favorite_microposts.build, remote: true) do |f| %>
  <div>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= micropost.id %>
    <%= current_user.id %>
  </div>
  <%= f.submit "Favorite", class: "btn btn-primary" %>
<% end %>